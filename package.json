{
  "name": "graphql-live-queries-root",
  "version": "1.0.0",
  "main": "index.js",
  "author": "n1ru4l <laurinquast@googlemail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/example/*",
    "packages/todo-example/*"
  ],
  "devDependencies": {
    "@changesets/cli": "2.16.0",
    "@types/jest": "26.0.23",
    "bob-the-bundler": "1.2.1",
    "husky": "7.0.0",
    "jest": "26.6.0",
    "lint-staged": "11.0.0",
    "patch-package": "6.4.7",
    "prettier": "2.3.2",
    "ts-jest": "26.5.6",
    "tsc-watch": "4.4.0",
    "typescript": "4.3.4"
  },
  "resolutions": {
    "graphql": "15.4.0-experimental-stream-defer.1"
  },
  "scripts": {
    "build": "yarn ts:transpile && bob build",
    "watch-build": "tsc-watch --project tsconfig.build.json --onSuccess \"bob build\"",
    "test": "jest --no-watchman",
    "ts:transpile": "tsc --project tsconfig.build.json",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "postinstall": "patch-package"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,graphql,yml}": [
      "prettier --write"
    ],
    "**/*.json": [
      "prettier --write"
    ]
  }
}
