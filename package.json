{
  "name": "graphql-live-queries-root",
  "version": "1.0.0",
  "main": "index.js",
  "author": "n1ru4l <laurinquast@googlemail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/example/*",
    "packages/todo-example/*"
  ],
  "devDependencies": {
    "@changesets/cli": "2.11.1",
    "@types/jest": "26.0.14",
    "bob-the-bundler": "1.1.0",
    "husky": "4.3.0",
    "jest": "24.9.0",
    "lint-staged": "10.5.0",
    "patch-package": "6.2.2",
    "prettier": "2.1.2",
    "ts-jest": "26.4.1",
    "typescript": "4.0.3"
  },
  "resolutions": {
    "graphql": "15.3.0"
  },
  "scripts": {
    "build": "yarn ts:transpile && bob build",
    "watch-build": "npx tsc-watch --project tsconfig.json --onSuccess \"bob build\"",
    "test": "jest --no-watchman",
    "ts:transpile": "tsc --project tsconfig.build.json",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "postinstall": "patch-package"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,graphql,yml}": [
      "prettier --write"
    ],
    "**/*.json": [
      "prettier --write"
    ]
  }
}
